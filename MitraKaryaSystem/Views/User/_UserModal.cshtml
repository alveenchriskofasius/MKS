
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="userModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header" style="background-color:#18864A">
				<h5 class="modal-title text-white" id="userModalLabel">User Information</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form id="userForm">
					<input type="text" hidden class="form-control" id="user_ID" />

					<div class="form-group">
						<label for="employee">User Name</label>
						<input type="email" placeholder="example@kalventis.com" class="form-control" id="username" />
						<span id="emailError" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label for="role" id="labelRole">Role</label>
						<select class="form-control" id="comboBoxRole"></select>
						<span id="roleError" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label for="role">Login ID</label>
						<input type="text" class="form-control" id="loginID" />
					</div>
					<div class="row">
						<div class="col-3">
							<label>Status</label>
						</div>
						<div class="col-9">
							<div class="custom-control custom-switch">
								<input type="checkbox" class="custom-control-input" checked id="isActive">
								<label class="custom-control-label" for="isActive">Active</label>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" id="buttonSave" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>
