@model CategoryModel
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" cellpadding="0" cellspacing="0" style="text-align:center" width="100%" id="tableCategory">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<button type="button" id="buttonNewCategory" class="btn btn-warning btn-sm">New Category</button>
<br />
<form id="formCategory">
    <input asp-for="@Model.ID" type="text" hidden />
    <input type="text" class="form-control" required asp-for="@Model.CategoryName" />
    <div class="invalid-feedback">Please enter a Category Name</div>
</form>
