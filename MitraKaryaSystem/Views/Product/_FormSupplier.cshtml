<form id="supplierForm">
    <div class="row">
        <label for="productName" class="form-label col-3">Name</label>
        <input type="text" id="productName" required class="form-control col-9" />
    </div>
    <br />
    <div class="row">
        <label for="contactPerson" class="form-label col-3">Contact Person</label>
        <input type="text" id="contactPerson" required class="form-control col-9" />
    </div>
    <br />
    <div class="row">
        <label for="contactNumber" class="form-label col-3">Contact Number</label>
        <input type="number" id="contactNumber" required class="form-control col-9" />
    </div>
    <br />
</form>