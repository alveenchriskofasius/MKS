@{
    ViewData["Title"] = "Product Form";
}
<div class="card">
    <div class="card-body">
        <form id="productForm">
            <div class="row">
                <label for="productName" class="form-label col-1">Name</label>
                <input type="text" id="productName" required class="form-control col-10" />
            </div>
            <br />
            <div class="row">
                <label for="textDescription" class="form-label col-1">Description</label>
                <input type="text" id="textDescription" required class="form-control col-10" />
            </div>
            <br />
            <div class="row">
                <label for="unitPrice" class="form-label col-1">Unit Price</label>
                <input type="number" id="unitPrice" required class="form-control col-10" />
            </div>
            <br />
            <div class="row">
                <label for="comboBoxSupplier" class="form-label col-1">Supplier</label>
                <select id="comboBoxSupplier" required class="form-control col-10 mr-1"></select>
                <button type="button" id="buttonAddSupplier" class="btn btn-primary col-auto">Add</button>
            </div>
            <br />
            <div class="row">
                <label for="comboBoxCategory" class="form-label col-1">Category</label>
                <select id="comboBoxCategory" required class="form-control col-10 mr-1"></select>
                <button type="button" id="buttonAddCategory" class="btn btn-primary col-auto">Add</button>
            </div>
            <br />
            <div class="row">
                <label for="comboBoxUnit" class="form-label col-1">Unit</label>
                <select id="comboBoxUnit" required class="form-control col-10  mr-1"></select>
                <button type="button" id="buttonAddUnit" class="btn btn-primary col-auto">Add</button>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <button type="button" id="buttonSave" class="btn btn-primary">Save</button>
        <button type="button" id="buttonCancel" class="btn btn-secondary">Cancel</button>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#18864A">
                <h5 class="modal-title text-white">Category Information</h5>
            </div>
            <div class="modal-body" id="categoryBodyModal">
                <partial name="_TableCategory" />

            </div>
            <div class="modal-footer">
                <button type="button" id="buttonNewCategory" class="btn btn-warning">New Category</button>

                <form id="formCategory">
                    <input type="text" hidden id="id" />
                    <input type="text" class="form-control" id="categoryName" />
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="buttonSaveCategory" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="unitModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#18864A">
                <h5 class="modal-title text-white">Unit Information</h5>
            </div>
            <div class="modal-body" id="unitBodyModal">
                <partial name="_TableUnit" />

            </div>
            <div class="modal-footer">
                <button type="button" id="buttonNewUnit" class="btn btn-warning">New Unit</button>

                <form id="formUnit">
                    <input type="text" hidden id="id" />
                    <input type="text" class="form-control" id="unitName" />
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="buttonSaveUnit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="supplierModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#18864A">
                <h5 class="modal-title text-white">Supplier Information</h5>
            </div>
            <div class="modal-body" id="supplierBodyModal">
                <partial name="_FormSupplier" />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="buttonSaveSupplier" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Product.js" asp-append-version="true"></script>
    <script src="~/js/Common.js" asp-append-version="true"></script>
}