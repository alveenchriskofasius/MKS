@model ProductViewModel
@{
	ViewData["Title"] = "Product Form";
}
<div class="card">
	<div class="card-body" id="productBodyCard">
		<partial model="@Model" name="_FormProduct" />
	</div>
	<div class="card-footer">
		<button type="button" id="buttonSave" class="btn btn-primary">
			<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
			Save
		</button>
		<a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
	<div class="modal-dialog  modal-xl">
		<div class="modal-content">
			<div class="modal-header" style="background-color:#18864A">
				<h5 class="modal-title text-white">Category Information</h5>
			</div>
			<div class="modal-body" id="categoryBodyModal">
				<partial model=@Model.CategoryModel name="_TableCategory" />

			</div>
			<div class="modal-footer">
				<button type="button" id="buttonCloseCategory" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" id="buttonSaveCategory" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="unitModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
	<div class="modal-dialog  modal-xl">
		<div class="modal-content">
			<div class="modal-header" style="background-color:#18864A">
				<h5 class="modal-title text-white">Unit Information</h5>
			</div>
			<div class="modal-body" id="unitBodyModal">
				<partial model=@Model.UnitModel name="_TableUnit" />
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" id="buttonSaveUnit" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script src="~/js/Product/Form.js" asp-append-version="true"></script>
	<script src="~/js/Common.js" asp-append-version="true"></script>
}