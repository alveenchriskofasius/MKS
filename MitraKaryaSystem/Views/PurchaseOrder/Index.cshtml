@{
    ViewData["Title"] = "Purchase Order";

}
<div class="card">
    <div class="card-header" style="background-color:#f0f0f0">
        <div class="card-title">
            <b> Purchase Order </b>
        </div>
    </div>
    <div class="card-body">
        <div class="card">
            <div class="card-body">
                <form id="purchaseOrderForm">
                    <div class="row mb-3">
                        <label for="purchaseOrderNumber" class="form-label col-2">Purchase Order Number<span class="asterisk">*</span></label>
                        <div class="col-10">
                            <input type="text" class="form-control" id="purchaseOrderNumber" name="purchaseOrderNumber" placeholder="Purchase Order Number" required>
                            @* <span asp-validation-for="ProductModel.Name" class="text-danger"></span> *@
                        </div>

                    </div>
                    <div class="row mb-3">
                        <label for="purchaseOrderDate" class="form-label col-2">Purchase Order Date<span class="asterisk">*</span></label>
                        <div class="col-10">
                            <input type="date" class="form-control col-2" id="purchaseOrderDate" name="purchaseOrderDate" placeholder="Purchase Order Date" required>
                            @* <span asp-validation-for="ProductModel.Name" class="text-danger"></span> *@
                        </div>

                    </div>

                </form>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <form id="purchaseOrderDetailForm">
                    <div class="row mb-3">
                        <label for="productId" class="form-label col-2">Product</label>
                        <div class="col-10">
                            <input type="text" class="form-control" id="productId" name="productId" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="quantity" class="form-label col-2">Quantity</label>
                        <div class="col-10">
                            <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Quantity" required>
                            @* <span asp-validation-for="ProductModel.Name" class="text-danger"></span> *@
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="unitPrice" class="form-label col-2">Unit Price</label>
                        <div class=" col-10">
                            <input type="number" class="form-control" id="unitPrice" name="unitPrice" placeholder="Unit Price" required>
                            @* <span asp-validation-for="ProductModel.Name" class="text-danger"></span> *@
                        </div>

                    </div>
                    <div class="row mb-3">
                        <label for="supplierId" class="form-label col-2">Supplier</label>
                        <div class="col-10">
                            <select class="form-control" id="supplierId" name="supplierId" required>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover" cellpadding="0" cellspacing="0" style="text-align:center" width="100%">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Supplier</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer">
        <button type="button" class="btn btn-primary" id="buttonSave">Save</button>
        <button type="button" class="btn btn-secondary" id="buttonCancel">Cancel</button>

    </div>
</div>