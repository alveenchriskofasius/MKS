@model CustomerModel
<form id="customerForm">
    <input asp-for="@Model.ID" type="text" hidden />
    <div class="form-group">
        <label asp-for="@Model.Name" for="Name" class="form-label">Name</label>
        <input asp-for="@Model.Name" type="text" id="Name" required class="form-control" />
        <div class="invalid-feedback">Please enter a name.</div>
    </div>
    <div class="form-group" id="contactPersonFormGroup">
        <label asp-for="@Model.ContactPerson" for="contactPerson" class="form-label">Contact Person</label>
        <input asp-for="@Model.ContactPerson" type="text" id="contactPerson" class="form-control" />
        <div class="invalid-feedback">Please enter a contact person.</div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ContactNumber" for="contactNumber" class="form-label">Contact Number</label>
        <input asp-for="@Model.ContactNumber" type="text" id="contactNumber" required class="form-control" />
        <div class="invalid-feedback">Please enter a contact number.</div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address" for="address" class="form-label">Address</label>
        <textarea asp-for="@Model.Address" type="text" id="address" required class="form-control"></textarea>
        <div class="invalid-feedback">Please enter an address.</div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Note" for="note" class="form-label">Note</label>
        <textarea asp-for="@Model.Note" type="text" id="note" required class="form-control"></textarea>
        <div class="invalid-feedback">Please enter a note.</div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <label>Customer Type</label>
        </div>
        <div class="col-sm-8">
            <input class="form-check-input" type="checkbox" asp-for="@Model.IsSupplier" checked="@(Model !=null && Model.IsSupplier ? true:false)" id="isSupplier">
            <label asp-for="@Model.IsSupplier" for="IsSupplier" class="form-label"> Is Supplier</label>
        </div>
    </div>
</form>
