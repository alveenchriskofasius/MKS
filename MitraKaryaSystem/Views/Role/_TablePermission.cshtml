@model RoleClaimModel
<div class="col-12">
	<div class="card">
		<div class="card-header">
			<b> Claims </b>
			<div class="card-title">
				<div class="row">
					<div class="col-9">
						<input asp-for="@Model.ClaimValue" id="ClaimType" autocomplete="off" class="form-control" aria-required="true" />
					</div>
					<div class="col-3">
						<button class="btn btn-primary" id="buttonSaveClaim"> Save </button>
					</div>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered table-hover" cellpadding="0" cellspacing="0" style="text-align:center" width="100%" id="tablePermission">
					<thead>
						<tr>
							<th>Claims</th>
						</tr>
					</thead>
					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
